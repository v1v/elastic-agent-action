{
  "name": "elastic-agent-login",
  "version": "2.0.0",
  "private": true,
  "description": "GitHub Action to install Elastic Agent to add monitoring for logs, metrics, and other types of data to the GitHub runner.",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --minify --license licenses.txt",
    "format": "eslint --fix src/**/*.ts __tests__/**/*.ts",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "test": "jest --coverage",
    "all": "yarn run build && yarn run format && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/v1v/elastic-agent-action.git"
  },
  "keywords": [
    "actions",
    "monitoring",
    "logs",
    "observability"
  ],
  "author": "Victor Martinez",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/http-client": "^2.0.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^1.5.5",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.42.1",
    "@vercel/ncc": "^0.33.3",
    "dotenv": "^16.3.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.2.5",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.4"
  }
}
